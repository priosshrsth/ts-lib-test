{
	"compilerOptions": {
		"baseUrl": "./",
		"esModuleInterop": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"module": "NodeNext",
		"outDir": "dist/",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"resolveJsonModule": true,
		"target": "ES2022",
		"paths": {
			"src/*": ["./src/*"]
		}
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/__tests__/*"
	]
}
